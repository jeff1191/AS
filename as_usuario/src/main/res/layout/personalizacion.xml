<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="1"
    tools:context=".MainActivity">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:gravity="center_vertical"
                android:id="@+id/cabecera"
                android:background="@color/blue">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:id="@+id/iconoConfig"
                    android:src="@drawable/volver"
                    android:layout_gravity="center"
                    android:onClick="volver"
                    android:clickable="true"
                    android:focusableInTouchMode="false" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_weight="1"
                    android:id="@+id/logo"
                    android:src="@drawable/logo"
                    android:layout_gravity="center" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:id="@+id/iconoAyuda"
                    android:src="@drawable/ayuda"
                    android:layout_gravity="center"
                    android:onClick="ayuda"
                    android:clickable="true" />

            </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cuerpo"
        android:layout_below="@+id/cabecera"
        android:gravity="center_horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Configuracion"
            android:id="@+id/configuracion"
            android:layout_below="@+id/cabecera"
            android:layout_centerHorizontal="true"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:id="@+id/avatarNombre">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:id="@+id/editarAvatar"
                android:src="@drawable/avatar"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:paddingBottom="15dp"
                android:paddingTop="15dp" />

            <EditText
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="nombreActual"
                android:textColor="@color/blue"
                android:ems="10"
                android:id="@+id/editarNombre"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/editarAvatar"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_gravity="center"
            android:id="@+id/fondoTono"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="0.47"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Personalizar"
                android:id="@+id/Personalizar"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:textColor="@color/blue"
                android:textStyle="bold"  />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:id="@+id/editColor"
                android:layout_below="@+id/Personalizar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Color:"
                    android:id="@+id/colorApp"
                    android:textColor="@color/blue"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:id="@+id/coloresPosibles"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/editTono"
                android:layout_below="@+id/editColor">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tono:"
                    android:id="@+id/tonoApp"
                    android:textColor="@color/blue"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="80dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:id="@+id/tonosPosibles"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

        </RelativeLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:id="@+id/envioInforme"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Enviar informe a mi correo"
                android:id="@+id/tituloEnvio"
                android:gravity="center_horizontal"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/frecuenciaEnvio"
                    android:layout_marginLeft="20dp">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Diario"
                            android:id="@+id/diario"
                            android:layout_alignBaseline="@+id/semanal"
                            android:layout_alignBottom="@+id/semanal"
                            android:layout_alignStart="@+id/editarNombre"
                            android:layout_weight="1"
                            android:textColor="@color/blue"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Semanal"
                            android:id="@+id/semanal"
                            android:layout_above="@+id/envioNuevaConfig"
                            android:layout_alignEnd="@+id/envioNuevaConfig"
                            android:layout_weight="1"
                            android:textColor="@color/blue"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mensual"
                            android:id="@+id/mensual"
                            android:layout_alignTop="@+id/diario"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/blue"
                            android:layout_weight="1"
                            android:gravity="center_vertical" />
                    </RadioGroup>

                </LinearLayout>

        </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Aceptar"
            android:id="@+id/envioNuevaConfig"
            android:background="@color/blue"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>

</RelativeLayout>
