<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cambiarFondo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/galeria">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/galeriaImg"
            android:src="@drawable/galeria"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Galeria"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:id="@+id/galeriaTxt"
            android:layout_marginStart="53dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/galeriaImg" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/navegador">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/navegadorImg"
            android:src="@drawable/navegador"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="66dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Navegdor"
            android:textColor="@color/blue"
            android:textStyle="bold"
            android:id="@+id/navegadorTxt"
            android:layout_marginStart="55dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/navegadorImg" />
    </RelativeLayout>
</LinearLayout>